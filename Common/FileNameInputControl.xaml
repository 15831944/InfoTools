<UserControl x:Class="Common.FileNameInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Common"
             mc:Ignorable="d" Height="30" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="fileNameTextBox" Margin="0,0,0,0" TextWrapping="Wrap" TextChanged="fileNameTextBox_TextChanged"/>
        <Button Content="..." Grid.Column="1" Margin="0,0,0,0" Click="Button_Click"/>
    </Grid>
</UserControl>

<UserControl x:Class="Civil3DInfoTools.Controls.SelectBlockUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Civil3DInfoTools.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="400"  Loaded="UserControl_Loaded">
    <!--Height="30" Width="400"-->
    <Grid>
        
        <ComboBox Name="blockComboBox" DisplayMemberPath="Name" Margin="0,0,40,0"/>
        <Button Content="^" HorizontalAlignment="Right" Width="40" ToolTip="Нажмите для выбора блока на чертеже" Click="Button_Click"/>
    </Grid>
</UserControl>
